# Cohere API Configuration
COHERE_API_KEY=your_cohere_api_key_here

# Qdrant Vector Database Configuration
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_URL=https://your-cluster-url.qdrant.tech

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Collection and ingestion settings
COLLECTION_NAME=humanoid-robotics-embeddings
TARGET_WEBSITE_URL=https://physical-ai-and-humanoid-robotics-t-two.vercel.app/

# CORS Configuration (Frontend origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Neon PostgreSQL Database Configuration
NEON_DATABASE_URL=postgresql://user:password@your-project.cloud.neon.tech/neondb

# Translation API Configuration (optional - uses Google Translate free tier by default)
# For production, consider using Google Cloud Translation API or Azure Translator
GOOGLE_TRANSLATE_API_KEY=optional_for_free_tier

# User Personalization Configuration
DEFAULT_LANGUAGE_PREFERENCE=en
ENABLE_PERSONALIZATION=true

# Authentication Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-min-256-bits-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7